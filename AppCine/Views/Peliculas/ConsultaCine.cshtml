@model IEnumerable<AppCine.Models.Pelicula>
@{
    ViewData["Title"] = "Consulta de Peliculas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Consulta de las peliculas</h1>

<div id="Consulta" class="carousel slide" data-ride="carousel">
    @* indicadores *@
    <ol class="carousel-indicators">
        @*declaro una variable para controlar el numero de indicadores*@
        @{ int contador = 0;}
        @*Ciclo para recorrer la coleccion/lista de objetos*@
        @foreach (var item in Model)
        {
            //se define la primera foto de la consulta como activa
            if (contador == 0)
            {
                <li data-target="#Consulta" data-slide-to="@contador" class="active"></li>
            }
            else
            {
                <li data-target="#Consulta" data-slide-to="@contador"></li>
            }//fin del if (else)
            contador++;
        }@*fin del del ciclo*@
    </ol>

    @* body *@
    <div class="carousel-inner">
        @*se incializar en cero el contador*@
        @{ contador = 0;}
        @*recorrer las coleccion/lista de objetos*@
        @foreach (var item in Model)
        {
            //indicar mi primer fotogafia que segun el codigo activa
            if (contador == 0)
            {
                //aqui de va a mostrar la foto del producto
                <div class="carousel-item active">
                    <img src=@Html.DisplayFor(a => item.foto) alt="Pelicula"
                         class="d-block w-100" style="max-height:480px;width:auto" />
                    @*aqui colocamos los datos del producto(Caption)*@
                <div class="carousel-caption d-none d-md-block">
                    <p>
                        <h4 style="color:coral">
                            @Html.DisplayFor(a => item.nomPelicula)
                            <br />
                            @Html.DisplayFor(a => item.tipoPelicula)
                        </h4>
                    </p>
                    <p>
                        <br />
                        Cupos: @Html.DisplayFor(a => item.cupos)
                        <br />
                    </p>
                    <p>
                        <br />
                        Campos Reservados: @Html.DisplayFor(a => item.cupos)
                        <br />
                    </p>
                </div>
                </div>
            }
            else
            {
                //aqui muestra las demas fotos(colecicon) del objeto
                <div class="carousel-item">
                    <img src=@Html.DisplayFor(a => item.foto) alt="Pelicula"
                         class="d-block w-100" style="max-height:480px;width:auto" />
                    @*aqui colocamos los datos del producto(Caption)*@
                <div class="carousel-caption d-none d-md-block">
                    <p>
                        <h4 style="color:coral">
                            @Html.DisplayFor(a => item.nomPelicula)
                            <br />
                            @Html.DisplayFor(a => item.tipoPelicula)
                        </h4>
                    </p>
                    <p>
                        <br />
                        Cupos: @Html.DisplayFor(a => item.cupos)
                        <br />
                    </p>
                    <p>
                        <br />
                        Campos Reservados: @Html.DisplayFor(a => item.cupos)
                        <br />
                    </p>
                </div>
                </div>
            }//fin del if (else)
             //incremento de la variable contador
            contador++;
        }@*fin del ciclo*@
    </div>
    @*controles < >*@
    <a class="carousel-control-prev" href="#Consulta" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#Consulta" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


